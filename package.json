{
  "name": "lumiere-auth",
  "version": "1.0.0",
  "description": "AWS Lambda functions for authenticating users with AWS Cognito.",
  "type": "module",
  "private": true,
  "workspaces": [
    "libs/*",
    "auth/*",
    "api/*"
  ],
  "scripts": {
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "fix": "npm run lint && npm run format",
    "test": "npm run test --workspaces",
    "build": "npm run build --workspaces",
    "postbuild": "rm -rf node_modules",
    "package": "npm run package --workspaces --if-present",
    "sam:build": "sam build --use-container",
    "sam:start": "sam local start-api --env-vars env.json --warm-containers EAGER"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.150",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "jest": "^30.0.4",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.2",
    "typescript": "^5.8.3"
  }
}
